// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Session {
  id                  String    @id @map("_id")
  shop                String
  state               String
  isOnline            Boolean   @default(false)
  scope               String?
  expires             DateTime?
  accessToken         String
  userId              BigInt?
  firstName           String?
  lastName            String?
  email               String?
  accountOwner        Boolean   @default(false)
  locale              String?
  collaborator        Boolean?  @default(false)
  emailVerified       Boolean?  @default(false)
  refreshToken        String?
  refreshTokenExpires DateTime?
}

model Customer {
  id           String        @id @default(auto()) @map("_id") @db.ObjectId
  shop         String
  userToken    String?       @unique // Optional for guests, unique for lookup
  firstName    String?
  lastName     String?
  email        String?       @unique // Optional initially, required for auth accounts
  passwordHash String?       // Required only for auth accounts
  createdAt    DateTime      @default(now())
  
  bodyProfiles CustomerBodyProfile[]
  scanSessions ScanSession[]
  sessions     CustomerSession[]

  @@index([userToken])
  @@index([email])
}

model CustomerSession {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  customerId String   @db.ObjectId
  customer   Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  token      String   @unique
  expiresAt  DateTime
  createdAt  DateTime @default(now())
}

model CustomerBodyProfile {
  id           String        @id @default(auto()) @map("_id") @db.ObjectId
  
  customerId   String        @db.ObjectId
  customer     Customer      @relation(fields: [customerId], references: [id], onDelete: Cascade)
  
  heightCm     Float
  measurements Json
  photos       Json?
  
  isActive     Boolean       @default(true)
  updatedAt    DateTime      @updatedAt
  createdAt    DateTime      @default(now())
  
  scanSessions ScanSession[]
}

model ScanSession {
  id                String              @id @default(auto()) @map("_id") @db.ObjectId
  shop              String
  productId         String
  
  customerId        String              @db.ObjectId
  customer          Customer            @relation(fields: [customerId], references: [id], onDelete: Cascade)
  
  customerProfileId String              @db.ObjectId
  customerProfile   CustomerBodyProfile @relation(fields: [customerProfileId], references: [id])
  
  recommendedSize   String?
  feedback          String?
  createdAt         DateTime            @default(now())
}

model SizeProfile {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  shop         String
  name         String
  generic      Boolean @default(true)
  measurements Json
}
