generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Session {
  id                  String    @id @map("_id")
  shop                String
  state               String
  isOnline            Boolean   @default(false)
  scope               String?
  expires             DateTime?
  accessToken         String
  userId              BigInt?
  firstName           String?
  lastName            String?
  email               String?
  accountOwner        Boolean   @default(false)
  locale              String?
  collaborator        Boolean?  @default(false)
  emailVerified       Boolean?  @default(false)
  refreshToken        String?
  refreshTokenExpires DateTime?
}

model CustomerBodyProfile {
  id           String        @id @default(auto()) @map("_id") @db.ObjectId
  shop         String
  userToken    String
  heightCm     Float
  measurements Json
  photos       Json?
  
  isActive     Boolean       @default(true)
  updatedAt    DateTime      @updatedAt
  createdAt    DateTime      @default(now())
  
  scanSessions ScanSession[]

  @@index([userToken])
}

model ScanSession {
  id                String              @id @default(auto()) @map("_id") @db.ObjectId
  shop              String
  productId         String
  
  customerProfileId String              @db.ObjectId
  customerProfile   CustomerBodyProfile @relation(fields: [customerProfileId], references: [id])
  
  recommendedSize   String?
  feedback          String?
  createdAt         DateTime            @default(now())
}

model SizeProfile {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  shop         String
  name         String
  generic      Boolean @default(true)
  measurements Json
}
